<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/stroke_gray_bg"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_sum"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/recharge_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5"
            android:textColor="@color/color_65c933"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/simple_item_click_bg_65c933"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_18dp"
            android:layout_marginBottom="@dimen/size_18dp"
            android:text="@string/payment"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>


</LinearLayout>