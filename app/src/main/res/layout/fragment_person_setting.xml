<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/person_setting_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_50dp">

                <ImageView
                    android:id="@+id/person_setting"
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/size_10dp"
                    android:scaleType="center"
                    android:background="@drawable/simple_item_click_bg_black"
                    android:src="@drawable/setting" />

                <ImageView
                    android:id="@+id/person_setting_head"
                    android:layout_width="@dimen/size_68dp"
                    android:layout_height="@dimen/size_68dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_oval"
                    android:padding="@dimen/size_2dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/person_setting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    tools:text="xxxx"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/login_or_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:gravity="center_horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/register_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:gravity="right"
                            android:text="@string/register"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="|"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:id="@+id/login_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_setting_top"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:background="@drawable/shape_common_corner2"
                android:clickable="true"
                android:elevation="@dimen/size_2dp"
                android:focusable="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_5dp">

                    <ImageView
                        android:id="@+id/my_account_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:src="@drawable/my_account" />

                    <TextView
                        android:id="@+id/my_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_toRightOf="@id/my_account_image"
                        android:text="@string/my_account"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/size_8dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:background="@color/color_f6f4f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <LinearLayout
                        android:id="@+id/my_balance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_65c933"
                            android:textSize="@dimen/text_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/balance"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/subscribe"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/subscribe_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_65c933"
                            android:textSize="@dimen/text_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subscribe"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_recharge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_9dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/recharge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/recharge"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10dp"
            android:background="@color/color_f8f8f8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f8"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/my_medal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55dp"
                android:background="@drawable/simple_item_click_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_medal_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/my_medal" />

                <TextView
                    android:id="@+id/my_medal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_toRightOf="@id/my_medal_image"
                    android:text="@string/my_medal"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:background="@color/color_f8f8f8" />

            <RelativeLayout
                android:id="@+id/my_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55dp"
                android:background="@drawable/simple_item_click_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_card_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/my_card" />

                <TextView
                    android:id="@+id/my_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_toRightOf="@id/my_card_image"
                    android:text="@string/my_card"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:background="@color/color_f8f8f8" />

            <RelativeLayout
                android:id="@+id/my_download"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55dp"
                android:background="@drawable/simple_item_click_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_download_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/my_download" />

                <TextView
                    android:id="@+id/my_download_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_toRightOf="@id/my_download_image"
                    android:text="@string/my_download"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:background="@color/color_f8f8f8" />

            <RelativeLayout
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55dp"
                android:background="@drawable/simple_item_click_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_Introduce_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/introduce" />

                <TextView
                    android:id="@+id/my_Introduce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_toRightOf="@id/my_Introduce_image"
                    android:text="@string/introduce"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:background="@color/color_f8f8f8" />

            <RelativeLayout
                android:id="@+id/proposal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55dp"
                android:background="@drawable/simple_item_click_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_Proposal_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@drawable/proposal" />

                <TextView
                    android:id="@+id/my_Proposal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_toRightOf="@id/my_Proposal_image"
                    android:text="@string/Proposal"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/size_16dp"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:background="@color/color_f8f8f8" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
