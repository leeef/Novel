<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/library_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_weight="9"
            android:background="@drawable/search_bg"
            android:drawableStart="@drawable/library_search"
            android:drawablePadding="@dimen/size_10dp"
            android:hint="@string/enter_your_preferred_type"
            android:paddingLeft="@dimen/size_5dp"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_15dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_999999"
            android:background="@drawable/simple_item_click_bg"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/gray_line_no_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <LinearLayout
                    android:layout_width="@dimen/size_5dp"
                    android:layout_height="@dimen/size_16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:text="@string/book_review"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <com.bx.philosopher.widget.FlowLayout
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_10dp" />

    </LinearLayout>

    <include
        android:id="@+id/empty_view"
        layout="@layout/empty_view"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</LinearLayout>