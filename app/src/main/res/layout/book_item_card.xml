<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/size_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/book_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0.5dp"
        android:background="@drawable/shape_corner_e4f0f3"
        android:orientation="vertical">


        <include layout="@layout/book_cover_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_corner"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/superhero_movie"
                android:textColor="@color/color_404040"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_5dp"
                android:layout_marginBottom="@dimen/size_5dp"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/book_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_15dp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/size_5dp"
                tools:text="Hollywood turned them into superheroes "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_11sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>