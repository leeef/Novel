<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/simple_item_click_bg"
    android:layout_marginTop="@dimen/size_10dp"
    android:layout_marginBottom="@dimen/size_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <LinearLayout
                android:layout_width="@dimen/size_5dp"
                android:layout_height="@dimen/size_15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/green" />

            <TextView
                android:id="@+id/book_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10dp"
                tools:text="@string/biography"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold"
                android:textColor="@color/color_080103"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/tag_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_6dp"
                android:src="@drawable/arrow_right"/>
            <TextView
                android:id="@+id/change_pic"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="@string/change"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/size_10dp"
                android:drawableEnd="@drawable/change_pic"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>