<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_15dp"
    android:layout_marginTop="@dimen/size_9dp"
    android:layout_marginEnd="@dimen/size_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_item_bg"
        android:padding="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_41dp"
            android:layout_height="@dimen/size_41dp"
            android:layout_marginStart="@dimen/size_8dp"
            android:background="@drawable/shape_green_oval"
            android:scaleType="center"
            android:src="@drawable/recharge_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_13dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/record_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingEnd="@dimen/size_10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_12sp"
                    tools:text="Name of Purchase Commodity" />

                <TextView
                    android:id="@+id/record_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:lines="1"
                    android:textColor="@color/color_65c933"
                    android:textSize="@dimen/text_12sp"
                    tools:text="$ 100.00000" />
            </LinearLayout>

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_12sp"
                tools:text="2019-03-28" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>